<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/textView_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="15dp"
                android:text="user"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#7f8c8d" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_user">

                <ImageView
                    android:id="@+id/imageView_artwork"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_artwork"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:background="#99000000"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Jason Derulo - aint no type"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView_artwork"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <com.joanzapata.iconify.widget.IconTextView
                        android:id="@+id/textView_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/imageView_artwork"
                        android:layout_weight="1"
                        android:shadowColor="#22000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="1"
                        android:text="{fa-play}"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#7f8c8d"
                        android:padding="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:weightSum="3">

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/textView_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_weight="1"
                            android:text="4:05"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#7f8c8d"
                            android:padding="20dp" />

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/textView_likes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="{fa-heart}"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#7f8c8d"
                            android:padding="20dp" />

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_weight="1"
                            android:shadowColor="#22000000"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="1"
                            android:text="{fa-arrow-down}"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#7f8c8d"
                            android:padding="20dp" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>