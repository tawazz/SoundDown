<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="user"
                android:id="@+id/textView_user"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_margin="15dp"
                android:textColor="#7f8c8d" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_user">

                <ImageView
                    android:id="@+id/imageView_artwork"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/textView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:background="#99000000"
                    android:layout_alignRight="@+id/imageView_artwork"
                    android:layout_alignBottom="@+id/imageView_artwork"
                    android:text="Jason Derulo - aint no type"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:textSize="25sp"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView_artwork"
                    android:weightSum="2"
                    android:layout_marginTop="10dp">

                    <net.tawazz.sounddown.helpers.FontAwesome
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="&#xf04b;"
                        android:id="@+id/textView_play"
                        android:layout_below="@+id/imageView_artwork"
                        android:layout_alignParentStart="true"
                        android:textColor="#7f8c8d"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="4:05"
                            android:id="@+id/textView_time"
                            android:layout_alignParentStart="true"
                            android:textColor="#7f8c8d"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"/>
                        <net.tawazz.sounddown.helpers.FontAwesome
                            android:id="@+id/textView_likes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="likes"
                            android:layout_alignParentStart="true"
                            android:textColor="#7f8c8d"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"/>
                        <net.tawazz.sounddown.helpers.FontAwesome
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="&#xf063;"
                            android:id="@+id/download"
                            android:layout_alignParentStart="true"
                            android:textColor="#7f8c8d"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>