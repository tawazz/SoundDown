<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SearchActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_search"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="@string/search"
        android:singleLine="true"
        android:layout_toStartOf="@+id/button_search"
        style="@style/Widget.AppCompat.EditText"
        android:textColorHint="@color/tazzy_color"
        android:textColor="@color/tazzy_color" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/button_search"
        android:layout_alignEnd="@+id/listView_songs"
        android:text="@string/search"
        android:padding="4dp"
        android:textColor="@color/primary_material_light"
        android:layout_alignBottom="@+id/editText_search"
        android:layout_alignParentTop="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_songs"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_search" />

</RelativeLayout>
