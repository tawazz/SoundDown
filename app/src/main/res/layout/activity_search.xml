<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SearchActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_search"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="@string/search"
        android:singleLine="true"
        android:layout_toStartOf="@+id/button_search"
        android:layout_alignBottom="@+id/button_search"
        style="@style/Widget.AppCompat.EditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/button_search"
        android:layout_alignEnd="@+id/listView_songs"
        android:text="@string/search"
        android:padding="16dp"
        android:textColor="@color/primary_material_light" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_songs"
        android:layout_below="@+id/button_search"
        android:layout_marginTop="34dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
